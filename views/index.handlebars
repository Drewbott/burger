
<img src="/assets/img/burger.png" class="center">
<div class="appname">
<h1>Burger Time!</h1>
</div>
<form class="create-form">

<div class="form-group">
    <label for="ca">Make Burger</label>
    <input type="text" id="ca" name="name">
      <button type="submit">Submit</button>
  </div>
</form>
<h2 class="subtitle-one">Burgers you need to eat!</h2>
<div class="burgersmade">
  
<ul>
  {{#each burgers}}
  {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<h2 h2 class="subtitle-two">Burgers Eaten!</h2>
<div class="burgerseaten">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>


